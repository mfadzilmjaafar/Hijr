@section scripts{
    <script>
        $(document).ready(function () {

            $('#btn_pertanyaan').click(function () {
                $('#div_mock').show('normal');
                $('#div_mockempty').hide();
            });

            $('#pertanyaan').click(function () {
                $('#div_mockempty').show('normal');
                $('#div_mock').hide();

                $('#div_paparsurat').hide();
                $('#div_pengesahan').hide();
                $('#div_ecard').hide();
            });

            $('#paparsurat').click(function () {
                $('#div_paparsurat').show('normal');

                $('#div_pengesahan').hide();
                $('#div_pertanyaan').hide();
                $('#div_ecard').hide();
            });

            $('#pengesahan').click(function () {
                $('#div_pengesahan').show('normal');

                $('#div_paparsurat').hide();
                $('#div_pertanyaan').hide();
                $('#div_ecard').hide();
            });

            $('#ecard').click(function () {
                $('#div_ecard').show('normal');

                $('#div_pengesahan').hide();
                $('#div_paparsurat').hide();
                $('#div_pertanyaan').hide();
            });
        });
    </script>
    }
