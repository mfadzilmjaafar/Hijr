                <div class="panel-body">
                    <div class="text-center">
                        <div class="form-group">
                            <input type="button" class="btn btn-success" value="Papar Surat Tawaran" />
                        </div>
                    </div>

                </div>
            </div>
        </form>

        <form class="form-horizontal" id="div_pengesahan" style="display:none">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Pengesahan</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="icinput" class="col-md-3 control-label">Pengesahan</label>
                        <div class="col-md-9">
                            <select class="form-control">
                                <option>--Sila pilih--</option>
                                <option>Ya</option>
                                <option>Tidak</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-default" value="Hantar" />
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <form class="form-horizontal" id="div_ecard" style="display:none">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Penyerahan eCard</h3>
                </div>
                <div class="panel-body">
                    <div class="text-center">
                        <div class="form-group">
                            <input type="button" class="btn btn-success" value="Isu eCard" />
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
